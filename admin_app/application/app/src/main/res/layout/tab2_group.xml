<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    app:orientation="vertical"
    android:weightSum="10"
    tools:context=".Tab2Groups">


<android.support.v7.widget.GridLayout
    android:id="@+id/gridLayout"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:padding="50dp"
    android:layout_marginBottom="0dp"
    app:alignmentMode="alignMargins"
    app:columnCount="2"
    app:columnOrderPreserved="false"
    app:rowCount="2"
    android:layout_weight="9"
    >

    <!--Row1-->

    <!--Col 1-->
    <android.support.v7.widget.CardView
        android:id="@+id/card1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="12dp"
            android:orientation="vertical"
            android:weightSum="10">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="10"
                android:contentDescription="@null"
                android:src="@drawable/group" />

            <TextView
                android:id="@+id/textGroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Health care problem"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v7.widget.CardView>


    <!--Row2-->

    <!--Col 1-->
    <android.support.v7.widget.CardView
        android:id="@+id/card2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="12dp"
            android:orientation="vertical"
            android:weightSum="10">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="10"
                android:contentDescription="@null"
                android:src="@drawable/group" />

            <TextView
                android:id="@+id/textGroup2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High education difference"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v7.widget.CardView>

    <!--Row1-->

    <!--Col 2-->
    <android.support.v7.widget.CardView
        android:id="@+id/card3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="12dp"
            android:orientation="vertical"
            android:weightSum="10">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="10"
                android:contentDescription="@null"
                android:src="@drawable/group" />

            <TextView
                android:id="@+id/textGroup3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Sentiment problems"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v7.widget.CardView>


    <!--Col 2-->
    <android.support.v7.widget.CardView
        android:id="@+id/card4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="12dp"
            android:orientation="vertical"
            android:weightSum="10">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="10"
                android:contentDescription="@null"
                android:src="@drawable/group" />

            <TextView
                android:id="@+id/textGroup4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Low difference"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v7.widget.CardView>

</android.support.v7.widget.GridLayout>

    <Button
        android:id="@+id/buttonAdd"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal|center"
        android:background="@drawable/roundedbutton"
        android:layout_weight="1"
        android:text="New group"
        android:layout_marginBottom="50dp"/>
</LinearLayout>
